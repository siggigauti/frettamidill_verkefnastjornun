extends layout

block content
  .row
    .col-md-offset-1.col-md-4.col-md-offset-1
      form(method="post")
        .form-group
          .row(style="margin-bottom: 2rem;")
            input.form-control#display_name(type="text", name="display_name", placeholder="Display name")
          .row(style="margin-bottom: 2rem;")
            input.form-control#password(type="password", name="password" placeholder="Password")
          .row(style="margin-bottom: 2rem;")
            input.form-control#email(type="email", name="email" placeholder="Email")
          .row(style="margin-bottom: 2rem;")
            button.btn.btn-primary.pull-right(type="submit") Save
    .col-md-offset-1.col-md-4.col-md-offset-1
      - if (frettir)
        - for (var i=0; i<frettir.length; i++)
          .row(style="margin-bottom: 0.5rem;")
            a(href="/frett/"+frettir[i].id)= frettir[i].headline
