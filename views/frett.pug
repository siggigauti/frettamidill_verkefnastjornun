extends layout

block content
  body
    .row
      .col-md-12
        .row
          h3.pull-left= frett[0].headline
          h4.pull-left(style="margin: 23px 0 0 5px;")= " - " + frett[0].date
          div(class="pull-right", style="margin-top: 25px;")
              a(href= "/groups/"+frett[0].article_group, style="padding-right: 20px;")= frett[0].article_group
        - if (frett[0].photo)
          img.pull-left(src= frett[0].photo)
        p= frett[0].content
        p= frett[0].user
    .row
      .col-md-12
        div.text-center(style="min-height:100px;")
          a(href="#Augl√Ωsing")
            img(src= "/img/banner.png")
